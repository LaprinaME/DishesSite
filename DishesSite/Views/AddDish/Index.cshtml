@model DishesSite.ViewModels.AddDishViewModel

<h1>Добавление нового блюда</h1>

<form asp-controller="AddDish" asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="DishId"></label>
        <input asp-for="DishId" class="form-control" />
        <span asp-validation-for="DishId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DishName"></label>
        <input asp-for="DishName" class="form-control" />
        <span asp-validation-for="DishName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Information"></label>
        <input asp-for="Information" class="form-control" />
        <span asp-validation-for="Information" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Добавить блюдо</button>
</form>
