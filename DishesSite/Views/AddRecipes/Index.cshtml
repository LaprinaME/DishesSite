@model DishesSite.ViewModels.AddRecipesViewModel

<form asp-action="Add">
    <div class="form-group">
        <label asp-for="RecipeId"></label>
        <input asp-for="RecipeId" class="form-control" />
        <span asp-validation-for="RecipeId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Название_рецепта"></label>
        <input asp-for="Название_рецепта" class="form-control" />
        <span asp-validation-for="Название_рецепта" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Описание"></label>
        <input asp-for="Описание" class="form-control" />
        <span asp-validation-for="Описание" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Ингредиенты"></label>
        <input asp-for="Ингредиенты" class="form-control" />
        <span asp-validation-for="Ингредиенты" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Инструкции"></label>
        <input asp-for="Инструкции" class="form-control" />
        <span asp-validation-for="Инструкции" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Добавить рецепт</button>
</form>
