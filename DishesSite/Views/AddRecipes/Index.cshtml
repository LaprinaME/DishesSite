@model DishesSite.ViewModels.AddRecipesViewModel

<h1>Добавление нового рецепта</h1>

<form asp-controller="AddRecipes" asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="RecipeId"></label>
        <input asp-for="RecipeId" class="form-control" />
        <span asp-validation-for="RecipeId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RecipeName"></label>
        <input asp-for="RecipeName" class="form-control" />
        <span asp-validation-for="RecipeName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Ingredients"></label>
        <input asp-for="Ingredients" class="form-control" />
        <span asp-validation-for="Ingredients" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Instructions"></label>
        <input asp-for="Instructions" class="form-control" />
        <span asp-validation-for="Instructions" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Добавить рецепт</button>
</form>
