@model IEnumerable<DishesSite.Models.Rating>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Список рейтингов</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-image: url("../img/2.jpg");
            color: #f1f1f1; /* Цвет текста */
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
            color: #ff6347; /* Цвет заголовка */
        }

        .table-container {
            width: 80%;
            background-color: rgba(0, 0, 0, 0.8); /* Фон контейнера таблицы */
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.5); /* Тень */
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            margin: 0 auto;
        }

            .table thead {
                background-color: #ff6347; /* Фон заголовков таблицы */
            }

                .table thead th {
                    padding: 10px;
                    color: #f1f1f1;
                    text-align: left;
                }

            .table tbody tr {
                border-bottom: 1px solid #444; /* Разделительная линия */
            }

                .table tbody tr:hover {
                    background-color: #555; /* Фон строки при наведении */
                }

            .table tbody td {
                padding: 10px;
                color: #f1f1f1;
            }

        .button-container {
            margin-top: 20px;
        }

        .return-button {
            background-color: #FFBD88;
            color: #555;
            border: none;
            padding: 10px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            text-decoration: none;
            text-align: center;
            display: block;
            text-transform: uppercase;
        }

            .return-button:hover {
                background-color: #5F9EA0;
            }
    </style>
</head>
<body>
    <div class="table-container">
        <h1>Список рейтингов</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Идентификатор</th>
                    <th>Средний рейтинг</th>
                    <th>Количество оценок</th>
                    <th>Идентификатор рецепта</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var rating in Model)
                {
                    <tr>
                        <td>@rating.Рейтинг_Id</td>
                        <td>@rating.Средний_рейтинг</td>
                        <td>@rating.Количество_оценок</td>
                        <td>@rating.Рецепт_Id</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="button-container">
        <a href="/Home/Index" class="return-button">Домой</a>
    </div>
</body>
</html>
