@model IEnumerable<DishesSite.Models.Recipe>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html>
<head>
    <title>Список рецептов</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0; /* Цвет фона */
            color: #333; /* Цвет текста */
            margin: 0;
            padding: 0;
        }

        h1 {
            text-align: center;
            color: #C41E3A; /* Цвет заголовка */
            padding-top: 20px; /* Добавляем отступ сверху для заголовка */
        }

        .table-container {
            max-width: 800px;
            margin: 20px auto; /* Выравниваем по центру */
            background-color: #fff; /* Цвет фона таблицы */
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Тень */
            overflow: hidden; /* Обрезаем содержимое, если оно выходит за границы */
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 10px;
            border-bottom: 1px solid #ddd; /* Цвет границ */
            text-align: left;
        }

        th {
            background-color: #C41E3A; /* Цвет фона заголовков */
            color: #FFF;
        }

        tr:hover {
            background-color: #f9f9f9; /* Цвет фона при наведении */
        }

        a {
            color: #C41E3A; /* Цвет ссылок */
            text-decoration: none;
            margin-right: 10px; /* Отступ между ссылками */
        }

            a:hover {
                text-decoration: underline; /* Подчеркивание при наведении */
            }

        .button-container {
            text-align: center;
            margin-top: 20px;
        }

        .return-button {
            display: inline-block;
            padding: 10px 20px;
            background-color: #C41E3A;
            color: #333;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            text-align: center;
            text-decoration: none;
        }

            .return-button:hover {
                background-color: #555;
            }
    </style>
</head>
<body>
    <h1>Список рецептов</h1>
    <div class="table-container">
        <table class="table">
            <thead>
                <tr>
                    <th>Название рецепта</th>
                    <th>Описание</th>
                    <th>Ингредиенты</th>
                    <th>Инструкции</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Название_рецепта)</td>
                        <td>@Html.DisplayFor(modelItem => item.Описание)</td>
                        <td>@Html.DisplayFor(modelItem => item.Ингредиенты)</td>
                        <td>@Html.DisplayFor(modelItem => item.Инструкции)</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Рецепт_Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Рецепт_Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="button-container">
        <a href="/Home/Index" class="return-button">Домой</a>
    </div>
</body>
</html>
