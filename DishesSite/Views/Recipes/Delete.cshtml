@model DishesSite.Models.Recipe

@{
    ViewData["Title"] = "Delete";
}

<!DOCTYPE html>
<html>
<head>
    <title>Удаление рецепта</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f9f9f9; /* Цвет фона */
            color: #333; /* Цвет текста */
            margin: 0;
            padding: 0;
        }

        h1 {
            text-align: center;
            color: #C41E3A; /* Цвет заголовка */
            padding-top: 20px; /* Добавляем отступ сверху для заголовка */
        }

        .delete-container {
            max-width: 600px;
            margin: 20px auto; /* Выравниваем по центру */
            background-color: #fff; /* Цвет фона контейнера */
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Тень */
            padding: 20px; /* Внутренний отступ */
        }

        dl {
            display: grid;
            grid-template-columns: auto auto; /* Две колонки */
            gap: 10px; /* Отступ между элементами */
        }

        dt, dd {
            padding: 5px;
        }

        dt {
            font-weight: bold;
        }

        form {
            text-align: center;
            margin-top: 20px; /* Отступ сверху для формы */
        }

        input[type="submit"] {
            background-color: #C41E3A; /* Цвет кнопки */
            color: #fff; /* Цвет текста на кнопке */
            border: none;
            padding: 10px 20px;
            cursor: pointer;
            border-radius: 5px;
        }

            input[type="submit"]:hover {
                background-color: #990024; /* Изменяем цвет кнопки при наведении */
            }

        a {
            color: #C41E3A; /* Цвет ссылки */
            text-decoration: none;
            margin-right: 10px; /* Отступ между ссылками */
        }

            a:hover {
                text-decoration: underline; /* Подчеркивание при наведении */
            }

        .button-container {
            text-align: center;
            margin-top: 20px;
        }

        .return-button {
            display: inline-block;
            padding: 10px 20px;
            background-color: #C41E3A;
            color: #333;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            text-align: center;
            text-decoration: none;
        }

            .return-button:hover {
                background-color: #555;
            }
    </style>
</head>
<body>
    <h1>Удаление рецепта</h1>
    <div class="delete-container">
        <h4>Recipe</h4>
        <hr />
        <dl>
            <dt>Название рецепта:</dt>
            <dd>@Html.DisplayFor(model => model.Название_рецепта)</dd>
            <dt>Описание:</dt>
            <dd>@Html.DisplayFor(model => model.Описание)</dd>
            <dt>Ингредиенты:</dt>
            <dd>@Html.DisplayFor(model => model.Ингредиенты)</dd>
            <dt>Инструкции:</dt>
            <dd>@Html.DisplayFor(model => model.Инструкции)</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Рецепт_Id" />
            <input type="submit" value="Удалить" /> |
            <a asp-action="Index">Вернуться к списку</a>
        </form>
    </div>
    <div class="button-container">
        <a href="/Home/Index" class="return-button">Домой</a>
    </div>
</body>
</html>
