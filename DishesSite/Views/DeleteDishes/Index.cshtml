@model IEnumerable<DishesSite.ViewModels.DeleteDishesViewModel>

<!DOCTYPE html>
<html>
<head>
    <title>Список блюд</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: linear-gradient(to right, #2b2b2b, #3e3e3e);
            color: #EEE6A3;
            margin: 0;
            padding: 0;
        }

        h1 {
            text-align: center;
            color: #EEE6A3;
            padding-top: 50px;
        }

        .table-container {
            max-width: 800px;
            margin: 50px auto;
            background-color: rgba(34, 34, 34, 0.9);
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.5);
            padding: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 12px;
            border-bottom: 1px solid #555;
            text-align: left;
            color: #EEE6A3;
        }

        th {
            background-color: #8B0000;
            color: #EEE6A3;
        }

        tr:nth-child(even) {
            background-color: #3e3e3e;
        }

        tr:hover {
            background-color: #555;
        }

        .btn {
            padding: 8px 16px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            color: #EEE6A3;
            transition: background-color 0.3s ease;
            margin-top: 20px;
            display: inline-block;
        }

        .btn-danger {
            background-color: #8B0000;
        }

            .btn-danger:hover {
                background-color: #B22222;
            }

        .button-container {
            text-align: center;
            margin-top: 20px;
        }

        .return-button {
            display: inline-block;
            padding: 10px 20px;
            background-color: #C41E3A;
            color: #333;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            text-align: center;
            text-decoration: none;
        }

            .return-button:hover {
                background-color: #555;
            }
    </style>
</head>
<body>
    <h1>Список блюд</h1>
    <div class="table-container">
        <table class="table">
            <thead>
                <tr>
                    <th>Идентификатор</th>
                    <th>Название</th>
                    <th>Описание</th>
                    <th>Информация</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var dish in Model)
                {
                    <tr>
                        <td>@dish.Блюдо_Id</td>
                        <td>@dish.Название_блюда</td>
                        <td>@dish.Описание</td>
                        <td>@dish.Информация</td>
                        <td>
                            <form asp-controller="DeleteDishes" asp-action="Delete" method="post">
                                <input type="hidden" name="Блюдо_Id" value="@dish.Блюдо_Id" />
                                <button type="submit" class="btn btn-danger">Удалить</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="button-container">
        <a href="/Home/Index" class="return-button">Домой</a>
    </div>
    <div class="button-container">
        <a href="/AdministrationMenu/Index" class="return-button">В меню</a>
    </div>
</body>
</html>
