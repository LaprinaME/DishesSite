@model IEnumerable<DishesSite.ViewModels.DeleteRatingViewModel>

<h1>Список рейтингов</h1>

<table class="table">
    <thead>
        <tr>
            <th>Идентификатор</th>
            <th>Средний рейтинг</th>
            <th>Количество оценок</th>
            <th>Идентификатор рецепта</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var rating in Model)
        {
            <tr>
                <td>@rating.Рейтинг_Id</td>
                <td>@rating.Средний_рейтинг</td>
                <td>@rating.Количество_оценок</td>
                <td>@rating.Рецепт_Id</td>
                <td>
                    <form asp-controller="DeleteRating" asp-action="Delete" method="post">
                        <input type="hidden" name="Рейтинг_Id" value="@rating.Рейтинг_Id" />
                        <button type="submit" class="btn btn-danger">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
